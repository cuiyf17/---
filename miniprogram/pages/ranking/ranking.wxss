.ranking {
  height: 100%;
  padding: 30rpx 20rpx;
  font-size: 32rpx;
}

.item {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  height: 100rpx;
  padding: 10rpx 30rpx;
}

.left {
  display: flex;
  align-items: center;
}

.left .num {
  font-size: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
  width: 44rpx;
}

.left image {
  height: 60rpx;
  width: 60rpx;
  border-radius: 10rpx;
  margin: 0 20rpx;
}

.right {
  color: #FF6262;
}
